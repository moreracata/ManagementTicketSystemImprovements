@model TicketManagement.Models.Ticket

@{
    AjaxOptions ajaxOptions = new AjaxOptions()
    {
        OnBegin = "OnBeginEdit(data)",
        OnSuccess = "OnSuccesEdit(data)",
        OnFailure = "OnFailureEdit(data)",
        OnComplete = "OnCompleteEdit(data)"
    };
}

<div class="modal-body">
    <div>


        @using (Ajax.BeginForm("Edit", "Tickets", null, ajaxOptions))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Ticket #@Model.Id</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)


                <div class="form-group">
                    @Html.LabelFor(model => model.RecepientID, "Destinario", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("RecepientID", (List<SelectListItem>)ViewBag.UsersList, new { id = "RecepientID", @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CategoryID, "Categoria", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("CategoryID", (List<SelectListItem>)ViewBag.CategoriesList, new { id = "CategoryID", @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PriorityID, "Prioridad", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("PriorityID", (List<SelectListItem>)ViewBag.PrioritiesList, new { id = "PriorityID", @class = "form-control" })
                        @*@Html.DropDownList("PriorityID", null, htmlAttributes: new { @class = "form-control" })*@
                        @*@Html.ValidationMessageFor(model => model.PriorityID, "", new { @class = "text-danger" })*@
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.StatusID, "Estado", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("StatusID", (List<SelectListItem>)ViewBag.StatusList, new { id = "StatusID", @class = "form-control" })
                        @*@Html.DropDownList("StatusID", null, htmlAttributes: new { @class = "form-control" })*@
                        @*@Html.ValidationMessageFor(model => model.StatusID, "", new { @class = "text-danger" })*@
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CreationDate, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CreationDate, "CreationDate", new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                        @Html.ValidationMessageFor(model => model.CreationDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.LastModificationDate, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.LastModificationDate, "", new { htmlAttributes = new {name= "LastModificationDate", id= "LastModificationDate", @class = "form-control", disabled = "disabled" } })
                        @Html.ValidationMessageFor(model => model.LastModificationDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Contenido, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Contenido, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Contenido, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
            }
        </div>


</div>
